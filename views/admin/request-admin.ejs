<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (message.length > 0) { %>
            <div class="user-message"><%= message %></div>
        <% } %>
        <% if (adminAccessRequest === 'off') { %>
        <form class="login-form" action="/request-admin" method="POST" novalidate>
            <h4>Name: <%= userDetail.name %></h4>
            <h4>E-mail: <%= userDetail.email %></h4>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Request Admin Acess</button>
        </form>
        <% } else { %>
            <h1>Your Request has been submitted, Please wait for approval</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>